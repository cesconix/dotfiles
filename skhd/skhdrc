# open terminal
cmd - return : open -n -a "Alacritty"

# open chrome 
cmd + shift - return : open -n -a "Arc"

# toggle window split type
alt - e : yabai -m window --toggle split

# rotate tree
alt - r : yabai -m space --rotate 90

# mirror tree y-axis
alt - y : yabai -m space --mirror y-axis

# mirror tree x-axis
alt - x : yabai -m space --mirror x-axis

# toggle float
alt - t : yabai -m window --toggle float

# balance size of windows
shift + alt - 0 : yabai -m space --balance

# moves focus between windows in the current focused display
cmd + shift - h : yabai -m window --focus west
cmd + shift - j : yabai -m window --focus south
cmd + shift - k : yabai -m window --focus north
cmd + shift - l : yabai -m window --focus east

# increase window size
shift + alt - h : yabai -m window --resize left:-20:0
shift + alt - j : yabai -m window --resize bottom:0:20
shift + alt - k : yabai -m window --resize top:0:-20
shift + alt - l : yabai -m window --resize right:20:0

# move window to another display
ctrl + alt - 1 : yabai -m window --display 1 && yabai -m display --focus 1
ctrl + alt - 2 : yabai -m window --display 2 && yabai -m display --focus 2
